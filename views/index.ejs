  </head>
<body>
    <form action="/aliens" method="post">
      
        <label for="Title"> Title :</label>
        <input type="text" id="Title" name = "Title">
        <br>
        <label for="Interviewer"> Interviewer :</label>
        <input type="text" id="Interviewer" name = "Interviewer">
        <br>
        <label for="Location"> Location :</label>
        <input type="text" id="Location" name = "Location">
        <br>
        <label for="Meeting_Link"> Meeting Link :</label>
        <input type="text" id="Meeting_Link" name = "Link">
        <br>
        <label for="Date">Date:</label>
      <input type="text" id="Date" name="Date" name = "Date">
      <br>
        <label for="start-time" class="flex-container1">Start Time:</label>
        <label for="end-time" class="flex-container1">End Time:</label>  
        <input type="text" id="start-time" class="flex-container" name="Start">
        <input type="text" id="end-time" class="flex-container" name="End">
      <br>
      <label for="Note"> Note :</label>
        <input type="text" id="Note" name = "Note">
        <br>
        <br>
    
      <button type="submit" method="post">Schedule</button>
    </form>
